@model Employee

@{
    ViewData["Title"] = "Property Manager Dashboard";
    var hasError = !string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString());
}

<div class="dashboard-container">
    <h1 class="page-title">Property Manager Dashboard</h1>
    
    @if (Model == null)
    {
        <div class="alert alert-warning" role="alert">
            Unable to load property manager information. Please contact support.
        </div>
    }
    else
    {
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-details">
                    <span class="stat-value">@ViewBag.TotalEmployees</span>
                    <span class="stat-label">Total Employees</span>
                    <span class="stat-change">Active employees</span>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <div class="stat-details">
                    <span class="stat-value">@ViewBag.PendingRequests</span>
                    <span class="stat-label">Pending Requests</span>
                    <span class="stat-change">This month</span>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-box"></i>
                </div>
                <div class="stat-details">
                    <span class="stat-value">@ViewBag.TotalInventory</span>
                    <span class="stat-label">Total Inventory</span>
                    <span class="stat-change">All items</span>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-truck"></i>
                </div>
                <div class="stat-details">
                    <span class="stat-value">@ViewBag.TotalSuppliers</span>
                    <span class="stat-label">Active Suppliers</span>
                    <span class="stat-change">Current suppliers</span>
                </div>
            </div>
        </div>

        <div class="info-grid">
            <div class="info-card profile-card">
                <div class="profile-header">
                    <div class="employee-profile-image">
                        <img src="@(string.IsNullOrEmpty(Model.ImagePath) ? "/images/default-profile.png" : Model.ImagePath)" 
                             alt="Profile Picture"
                             onerror="this.src='/images/default-profile.png'">
                    </div>
                    <div class="profile-title">
                        <h3>@(Model.FirstName ?? "User") @(Model.LastName ?? "")</h3>
                        <span class="profile-position">Property Manager</span>
                    </div>
                    <div class="profile-actions">
                        <a href="@Url.Action("EditProfile", "Employee", new { id = Model.Id })" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Edit Profile
                        </a>
                    </div>
                </div>
                <div class="profile-content">
                    <div class="profile-section">
                        <h4>Personal Information</h4>
                        <div class="info-item">
                            <span class="info-label">Employee ID</span>
                            <span class="info-value">@(Model.EmployeeId ?? "N/A")</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Email</span>
                            <span class="info-value">@(Model.Email ?? "N/A")</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Phone</span>
                            <span class="info-value">@(Model.Phone ?? "N/A")</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">NIC</span>
                            <span class="info-value">@(Model.NIC ?? "N/A")</span>
                        </div>
                    </div>
                    <div class="profile-section">
                        <h4>Work Information</h4>
                        <div class="info-item">
                            <span class="info-label">Department</span>
                            <span class="info-value">@(Model.Department?.Name ?? "N/A")</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Join Date</span>
                            <span class="info-value">@(Model.JoinDate.ToString("MMM dd, yyyy") ?? "N/A")</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Status</span>
                            <span class="info-value @(Model.IsActive ? "status-active" : "status-inactive")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="info-card">
                <div class="info-header">
                    <h3><i class="fas fa-tshirt"></i> Uniform Management</h3>
                    <a href="@Url.Action("Index", "Inventory")" class="btn-link">View All</a>
                </div>
                <div class="info-content">
                    <div class="info-item">
                        <span class="info-label">Total Uniforms</span>
                        <span class="info-value">@ViewBag.TotalUniforms</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Available</span>
                        <span class="info-value">@ViewBag.AvailableUniforms</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Assigned</span>
                        <span class="info-value">@ViewBag.AssignedUniforms</span>
                    </div>
                </div>
            </div>
            <div class="info-card">
                <div class="info-header">
                    <h3><i class="fas fa-tools"></i> Equipment Management</h3>
                    <a href="@Url.Action("Index", "Inventory")" class="btn-link">View All</a>
                </div>
                <div class="info-content">
                    <div class="info-item">
                        <span class="info-label">Total Equipment</span>
                        <span class="info-value">@ViewBag.TotalEquipment</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Available</span>
                        <span class="info-value">@ViewBag.AvailableEquipment</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Assigned</span>
                        <span class="info-value">@ViewBag.AssignedEquipment</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="recent-activities">
            <div class="section-header">
                <h3>Recent Activities</h3>
                <a href="@Url.Action("Index", "Request")" class="btn-link">View All</a>
            </div>
            <div class="activity-list">
                @if (ViewBag.RecentRequests != null && ViewBag.RecentRequests.Count > 0)
                {
                    foreach (var request in ViewBag.RecentRequests)
                    {
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-clipboard-list"></i>
                            </div>
                            <div class="activity-details">
                                <span class="activity-title">@request.RequestType Request</span>
                                <span class="activity-desc">@request.EmployeeName requested @request.ItemName</span>
                                <span class="activity-time">@request.RequestDate.ToString("MMM dd, yyyy HH:mm")</span>
                            </div>
                            <div class="activity-status @request.Status.ToLower()">
                                @request.Status
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="no-data">
                        <i class="fas fa-info-circle"></i>
                        <span>No recent activities</span>
                    </div>
                }
            </div>
        </div>
    }
</div>

