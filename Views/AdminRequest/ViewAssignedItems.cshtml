@model IEnumerable<UniformAndEquipmentManagementSystem.Models.Item>

@{
    ViewData["Title"] = "Employee Assigned Items";
    var employee = ViewBag.Employee as Employee;
    var requestId = ViewBag.RequestId;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-user-check me-2"></i>Assigned Items - @employee?.FirstName @employee?.LastName
                        </h3>
                        <a href="@Url.Action("Process", new { id = requestId })" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Request
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Employee Information</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Name:</strong></td>
                                    <td>@employee?.FirstName @employee?.LastName</td>
                                </tr>
                                <tr>
                                    <td><strong>Department:</strong></td>
                                    <td>@employee?.Department?.Name</td>
                                </tr>
                                <tr>
                                    <td><strong>Employee ID:</strong></td>
                                    <td>@employee?.EmployeeId</td>
                                </tr>
                                <tr>
                                    <td><strong>Position:</strong></td>
                                    <td>@employee?.Position</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h6 class="card-title">Summary</h6>
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="border-end">
                                                <h4 class="text-primary mb-0">@Model.Count()</h4>
                                                <small class="text-muted">Total Items</small>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <h4 class="text-success mb-0">@Model.Count(i => i.Status == "Assigned")</h4>
                                            <small class="text-muted">Active Items</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Item</th>
                                        <th>Type</th>
                                        <th>Department</th>
                                        <th>Supplier</th>
                                        <th>Assigned Date</th>
                                        <th>Status</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(item.ImagePath))
                                                    {
                                                        <img src="@item.ImagePath" class="rounded me-2" 
                                                             style="width: 40px; height: 40px; object-fit: cover;" 
                                                             alt="@item.ItemName">
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-secondary rounded me-2 d-flex align-items-center justify-content-center" 
                                                             style="width: 40px; height: 40px;">
                                                            <i class="fas fa-box text-white"></i>
                                                        </div>
                                                    }
                                                    <div>
                                                        <strong>@item.ItemName</strong><br>
                                                        <small class="text-muted">@item.ItemId</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge @(item.ItemType == "Uniform" ? "bg-primary" : "bg-info")">
                                                    @item.ItemType
                                                </span>
                                            </td>
                                            <td>@item.Department?.Name</td>
                                            <td>@item.Supplier?.CompanyName</td>
                                            <td>@item.AssignedDate?.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <span class="badge @(item.Status.ToLower() switch {
                                                    "assigned" => "bg-success",
                                                    "returned" => "bg-warning",
                                                    "maintenance" => "bg-danger",
                                                    _ => "bg-secondary"
                                                })">
                                                    @item.Status
                                                </span>
                                            </td>
                                            <td>
                                                <strong>LKR @item.Price.ToString("F2")</strong>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                            <h5 class="text-muted">No Items Assigned</h5>
                            <p class="text-muted">This employee has not been assigned any items yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any additional JavaScript functionality here
            console.log('Assigned Items view loaded');
        });
    </script>
} 