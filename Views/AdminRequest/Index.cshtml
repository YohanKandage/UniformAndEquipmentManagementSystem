@model IEnumerable<UniformAndEquipmentManagementSystem.Models.Request>

@{
    ViewData["Title"] = "Request Management";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Request Management</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Request Date</th>
                            <th>Employee</th>
                            <th>Department</th>
                            <th>Item</th>
                            <th>Status</th>
                            <th>Processed Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RequestDate.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>@item.Employee.FirstName @item.Employee.LastName</td>
                                <td>@item.Employee.Department?.Name</td>
                                <td>@item.Item.ItemName</td>
                                <td>
                                    <span class="badge bg-@(item.Status switch {
                                        "Pending" => "warning",
                                        "Approved" => "success",
                                        "Cancelled" => "danger",
                                        _ => "secondary"
                                    })">
                                        @item.Status
                                    </span>
                                </td>
                                <td>
                                    @(item.ProcessedDate?.ToString("MMM dd, yyyy HH:mm") ?? "-")
                                </td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-outline-primary" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#requestModal@(item.Id)">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </td>
                            </tr>

                            <!-- Request Details Modal -->
                            <div class="modal fade" id="requestModal@(item.Id)" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Request Details</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <dl class="row">
                                                <dt class="col-sm-4">Request Date</dt>
                                                <dd class="col-sm-8">@item.RequestDate.ToString("MMM dd, yyyy HH:mm")</dd>

                                                <dt class="col-sm-4">Employee</dt>
                                                <dd class="col-sm-8">@item.Employee.FirstName @item.Employee.LastName</dd>

                                                <dt class="col-sm-4">Department</dt>
                                                <dd class="col-sm-8">@item.Employee.Department?.Name</dd>

                                                <dt class="col-sm-4">Item</dt>
                                                <dd class="col-sm-8">@item.Item.ItemName</dd>

                                                <dt class="col-sm-4">Status</dt>
                                                <dd class="col-sm-8">
                                                    <span class="badge bg-@(item.Status switch {
                                                        "Pending" => "warning",
                                                        "Approved" => "success",
                                                        "Cancelled" => "danger",
                                                        _ => "secondary"
                                                    })">
                                                        @item.Status
                                                    </span>
                                                </dd>

                                                <dt class="col-sm-4">Reason</dt>
                                                <dd class="col-sm-8">@item.Reason</dd>

                                                @if (!string.IsNullOrEmpty(item.AdminComment))
                                                {
                                                    <dt class="col-sm-4">Admin Comment</dt>
                                                    <dd class="col-sm-8">@item.AdminComment</dd>
                                                }

                                                @if (item.ProcessedDate.HasValue)
                                                {
                                                    <dt class="col-sm-4">Processed Date</dt>
                                                    <dd class="col-sm-8">@item.ProcessedDate.Value.ToString("MMM dd, yyyy HH:mm")</dd>
                                                }
                                            </dl>

                                            @if (item.Status == "Pending")
                                            {
                                                <form asp-action="ProcessRequest" method="post" class="mt-4">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <div class="mb-3">
                                                        <label class="form-label">Admin Comment</label>
                                                        <textarea name="adminComment" class="form-control" rows="3" required></textarea>
                                                    </div>
                                                    <div class="d-flex gap-2">
                                                        <button type="submit" name="status" value="Approved" class="btn btn-success">
                                                            <i class="fas fa-check me-2"></i>Approve
                                                        </button>
                                                        <button type="submit" name="status" value="Cancelled" class="btn btn-danger">
                                                            <i class="fas fa-times me-2"></i>Cancel
                                                        </button>
                                                    </div>
                                                </form>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss success message after 5 seconds
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert-success').alert('close');
            }, 5000);
        });
    </script>
} 