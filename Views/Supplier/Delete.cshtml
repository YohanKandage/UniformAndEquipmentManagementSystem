@model UniformAndEquipmentManagementSystem.Models.Supplier
@{
    ViewData["Title"] = "Delete Supplier";
}

<div class="container mt-4">
    <h2>Delete Supplier</h2>
    <div class="alert alert-danger">
        Are you sure you want to delete this supplier?
    </div>
    <div class="card mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Company Name</dt>
                <dd class="col-sm-9">@Model.CompanyName</dd>
                <dt class="col-sm-3">Company Code</dt>
                <dd class="col-sm-9">@Model.CompanyCode</dd>
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                <dt class="col-sm-3">Contact No</dt>
                <dd class="col-sm-9">@Model.ContactNo</dd>
            </dl>
        </div>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
    </form>
</div> 