@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var isAdmin = User.IsInRole("Admin");
    var isStockManager = User.IsInRole("StockManager");
    var isEmployee = User.IsInRole("Employee");
}

<div class="side-nav">
    <div class="nav-logo">
        <img src="~/images/fmi-logo.png.jpeg" alt="FMI Logo" class="fmi-logo" />
    </div>
    
    <div class="nav-items">
        @if (isEmployee)
        {
            <div class="nav-item @(currentController == "Dashboard" ? "active" : "")">
                <a asp-controller="Dashboard" asp-action="EmployeeDashboard">
                    <i class="fas fa-chart-line"></i>
                    <span>Dashboard</span>
                </a>
            </div>
        }
        else if (isAdmin)
        {
            <div class="nav-item @(currentController == "Dashboard" ? "active" : "")">
                <a asp-controller="Dashboard" asp-action="AdminDashboard">
                    <i class="fas fa-chart-line"></i>
                    <span>Dashboard</span>
                </a>
            </div>
        }
        else
        {
            <div class="nav-item @(currentController == "Dashboard" ? "active" : "")">
                <a asp-controller="Dashboard" asp-action="Index">
                    <i class="fas fa-chart-line"></i>
                    <span>Dashboard</span>
                </a>
            </div>
        }
        @if (isAdmin)
        {
            <div class="nav-item @(currentController == "Employee" ? "active" : "")">
                <a asp-controller="Employee" asp-action="Index">
                    <i class="fas fa-users"></i>
                    <span>Employees</span>
                </a>
            </div>
            <div class="nav-item @(currentController == "AdminRequest" ? "active" : "")">
                <a asp-controller="AdminRequest" asp-action="Index">
                    <i class="fas fa-clipboard-list"></i>
                    <span>Request Management</span>
                </a>
            </div>
            <div class="nav-section-title">Reports</div>
            <div class="nav-subitem @(currentController == "Reports" && ViewContext.RouteData.Values["action"]?.ToString() == "DepartmentWiseEmployeeReport" ? "active" : "")">
                <a asp-controller="Reports" asp-action="DepartmentWiseEmployeeReport">
                    <i class="fas fa-building"></i>
                    <span>Department Wise Employee Report</span>
                </a>
            </div>
            <div class="nav-subitem @(currentController == "Reports" && ViewContext.RouteData.Values["action"]?.ToString() == "EmployeeRequestReport" ? "active" : "")">
                <a asp-controller="Reports" asp-action="EmployeeRequestReport">
                    <i class="fas fa-clipboard-list"></i>
                    <span>Employee Request Report</span>
                </a>
            </div>
            <div class="nav-section-title">Master Configuration</div>
            <div class="nav-subitem @(currentController == "Department" ? "active" : "")">
                <a asp-controller="Department" asp-action="Index">
                    <i class="fas fa-building"></i>
                    <span>Departments</span>
                </a>
            </div>
            <div class="nav-subitem @(currentController == "Role" ? "active" : "")">
                <a asp-controller="Role" asp-action="Index">
                    <i class="fas fa-user-shield"></i>
                    <span>Roles</span>
                </a>
            </div>
        }
        else if (isEmployee)
        {
            <div class="nav-item @(currentController == "Request" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                <a asp-controller="Request" asp-action="Index">
                    <i class="fas fa-clipboard-list"></i>
                    <span>My Requests</span>
                </a>
            </div>
            <div class="nav-item @(currentController == "Request" && ViewContext.RouteData.Values["action"]?.ToString() == "MyInventory" ? "active" : "")">
                <a asp-controller="Request" asp-action="MyInventory">
                    <i class="fas fa-box"></i>
                    <span>My Inventory</span>
                </a>
            </div>
        }
        @if (isAdmin || isStockManager)
        {
            <div class="nav-item @(currentController == "Item" ? "active" : "")">
                <a asp-controller="Item" asp-action="Index">
                    <i class="fas fa-box-open"></i>
                    <span>Inventory Items</span>
                </a>
            </div>
            <div class="nav-item @(currentController == "Supplier" ? "active" : "")">
                <a asp-controller="Supplier" asp-action="Index">
                    <i class="fas fa-truck"></i>
                    <span>Suppliers</span>
                </a>
            </div>
        }
    </div>
</div>

<style>
    .side-nav {
        background-color: #3b3e6b;
        width: 250px;
        height: 100vh;
        position: fixed;
        left: 0;
        top: 0;
        display: flex;
        flex-direction: column;
        box-shadow: 2px 0 5px rgba(0,0,0,0.2);
        overflow-y: auto;
    }

    .nav-logo {
        padding: 8px;
        background-color: #2c2e52;
        display: flex;
        justify-content: center;
        align-items: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        height: 50px;
    }

    .fmi-logo {
        max-width: 110px;
        max-height: 38px;
        width: auto;
        height: auto;
        object-fit: contain;
    }

    .nav-items {
        padding: 20px 0;
        flex: 1;
    }

    .nav-item {
        padding: 12px 24px;
        margin: 4px 0;
        cursor: pointer;
        transition: all 0.3s ease;
        border-left: 3px solid transparent;
    }

    .nav-item a {
        color: rgba(255, 255, 255, 0.9);
        text-decoration: none;
        font-size: 15px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .nav-item i {
        width: 20px;
        text-align: center;
        color: rgba(255, 255, 255, 0.8);
    }

    .nav-item:hover, .nav-item.active {
        background-color: rgba(255, 255, 255, 0.08);
        border-left: 3px solid #4a4d7d;
    }

    .nav-item:hover a, .nav-item.active a {
        color: white;
        font-weight: 500;
    }

    .nav-item:hover i, .nav-item.active i {
        color: white;
    }

    .nav-section-title {
        color: rgba(255, 255, 255, 0.6);
        font-size: 13px;
        font-weight: bold;
        padding: 16px 24px 4px 24px;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .nav-subitem {
        padding: 10px 40px;
        margin: 2px 0;
        cursor: pointer;
        transition: all 0.3s ease;
        border-left: 3px solid transparent;
    }

    .nav-subitem a {
        color: rgba(255, 255, 255, 0.85);
        text-decoration: none;
        font-size: 14px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .nav-subitem i {
        width: 18px;
        text-align: center;
        color: rgba(255, 255, 255, 0.7);
    }

    .nav-subitem:hover, .nav-subitem.active {
        background-color: rgba(255, 255, 255, 0.08);
        border-left: 3px solid #4a4d7d;
    }

    .nav-subitem:hover a, .nav-subitem.active a {
        color: white;
        font-weight: 500;
    }

    .nav-subitem:hover i, .nav-subitem.active i {
        color: white;
    }

    .nav-submenu {
        display: block;
        padding-left: 20px;
        background-color: rgba(0, 0, 0, 0.1);
        border-left: 3px solid #4a4d7d;
    }

    .nav-submenu a {
        color: rgba(255, 255, 255, 0.85);
        text-decoration: none;
        font-size: 14px;
        padding: 8px 0;
        display: block;
    }

    .nav-submenu a:hover {
        color: white;
    }

    /* Custom scrollbar for side nav */
    .side-nav::-webkit-scrollbar {
        width: 6px;
    }

    .side-nav::-webkit-scrollbar-track {
        background: rgba(0, 0, 0, 0.1);
    }

    .side-nav::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.2);
        border-radius: 3px;
    }

    .side-nav::-webkit-scrollbar-thumb:hover {
        background: rgba(255, 255, 255, 0.3);
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const navToggles = document.querySelectorAll('.nav-toggle');
            navToggles.forEach(toggle => {
                toggle.addEventListener('click', function(e) {
                    e.preventDefault();
                    const navItem = this.closest('.nav-item');
                    navItem.classList.toggle('active');
                });
            });
        });
    </script>
} 