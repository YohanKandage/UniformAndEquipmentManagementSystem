@{
    ViewData["Title"] = "Property Manager Dashboard";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Property Manager Dashboard</h1>
    </div>

    <!-- Stats Cards -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Employees</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalEmployees</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pending Requests</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.PendingRequests</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Total Inventory</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalInventory</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-boxes fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Active Suppliers</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalSuppliers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-truck fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row -->
    <div class="row">
        <!-- Profile Information -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Profile Information</h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img class="img-profile rounded-circle" src="@Model.ProfileImage" alt="Profile Image" style="width: 150px; height: 150px; object-fit: cover;">
                    </div>
                    <div class="mb-3">
                        <h5 class="font-weight-bold">@Model.FirstName @Model.LastName</h5>
                        <p class="text-muted">@Model.Email</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="font-weight-bold">Contact Information</h6>
                        <p class="mb-1"><i class="fas fa-phone mr-2"></i> @Model.PhoneNumber</p>
                        <p class="mb-1"><i class="fas fa-envelope mr-2"></i> @Model.Email</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Management Cards -->
        <div class="col-lg-8">
            <div class="row">
                <!-- Uniform Management -->
                <div class="col-lg-6 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Uniform Management</h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h6 class="font-weight-bold">Statistics</h6>
                                <p class="mb-1">Total Uniforms: @ViewBag.TotalUniforms</p>
                                <p class="mb-1">Low Stock Items: @ViewBag.LowStockUniforms</p>
                            </div>
                            <a href="@Url.Action("Index", "Item", new { type = "Uniform" })" class="btn btn-primary btn-block">
                                <i class="fas fa-tshirt mr-2"></i> Manage Uniforms
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Equipment Management -->
                <div class="col-lg-6 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Equipment Management</h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h6 class="font-weight-bold">Statistics</h6>
                                <p class="mb-1">Total Equipment: @ViewBag.TotalEquipment</p>
                                <p class="mb-1">Low Stock Items: @ViewBag.LowStockEquipment</p>
                            </div>
                            <a href="@Url.Action("Index", "Item", new { type = "Equipment" })" class="btn btn-primary btn-block">
                                <i class="fas fa-tools mr-2"></i> Manage Equipment
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Recent Requests -->
                <div class="col-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Recent Requests</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Employee</th>
                                            <th>Item</th>
                                            <th>Request Date</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var request in ViewBag.RecentRequests)
                                        {
                                            <tr>
                                                <td>@request.Employee.FirstName @request.Employee.LastName</td>
                                                <td>@request.Item.ItemName</td>
                                                <td>@request.RequestDate.ToString("MMM dd, yyyy HH:mm")</td>
                                                <td>
                                                    @switch (request.Status)
                                                    {
                                                        case "Pending":
                                                            <span class="badge badge-warning">@request.Status</span>
                                                            break;
                                                        case "Approved":
                                                            <span class="badge badge-success">@request.Status</span>
                                                            break;
                                                        case "Rejected":
                                                            <span class="badge badge-danger">@request.Status</span>
                                                            break;
                                                        default:
                                                            <span class="badge badge-secondary">@request.Status</span>
                                                            break;
                                                    }
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("Details", "Request", new { id = request.Id })" class="btn btn-info btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (request.Status == UniformAndEquipmentManagementSystem.Models.RequestStatus.Pending.ToString())
                                                    {
                                                        <a href="@Url.Action("Process", "Request", new { id = request.Id })" class="btn btn-primary btn-sm">
                                                            <i class="fas fa-check"></i>
                                                        </a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Request Status Chart
        const requestStatusCtx = document.getElementById('requestStatusChart').getContext('2d');
        new Chart(requestStatusCtx, {
            type: 'pie',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.RequestStatusDistribution.Keys)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(ViewBag.RequestStatusDistribution.Values)),
                    backgroundColor: [
                        '#4CAF50',  // Approved
                        '#FFC107',  // Pending
                        '#F44336',  // Rejected
                        '#2196F3'   // Other
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Inventory Status Chart
        const inventoryStatusCtx = document.getElementById('inventoryStatusChart').getContext('2d');
        new Chart(inventoryStatusCtx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.InventoryStatus.Keys)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(ViewBag.InventoryStatus.Values)),
                    backgroundColor: [
                        '#4CAF50',  // In Stock
                        '#FFC107',  // Low Stock
                        '#F44336'   // Out of Stock
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
}

