@{
    ViewData["Title"] = "Reports";
}

<div class="container-fluid">
    <div class="text-center py-5">
        <i class="fas fa-chart-bar fa-3x text-primary mb-3"></i>
        <h3>Redirecting to Reports...</h3>
        <p class="text-muted">Please wait while we redirect you to the appropriate report.</p>
    </div>
</div>

<script>
    // Redirect based on user role
    @if (User.IsInRole("Admin"))
    {
        <text>window.location.href = '@Url.Action("DepartmentWiseEmployeeReport", "Reports")';</text>
    }
    else if (User.IsInRole("PropertyManager"))
    {
        <text>window.location.href = '@Url.Action("EmployeeRequestReport", "Reports")';</text>
    }
    else if (User.IsInRole("StockManager"))
    {
        <text>window.location.href = '@Url.Action("InventoryReport", "Reports")';</text>
    }
    else
    {
        <text>window.location.href = '@Url.Action("Index", "Dashboard")';</text>
    }
</script> 