@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Department Wise Employee Report";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Department Wise Employee Report</h2>
        <div>
            <button id="exportBtn" class="btn btn-success">
                <i class="fas fa-file-excel"></i> Export to Excel
            </button>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="departmentName" class="form-label">Department</label>
                    <select id="departmentName" name="departmentName" class="form-select">
                        <option value="">All Departments</option>
                        @foreach (var dept in ViewBag.Departments)
                        {
                            <option value="@dept" selected="@(ViewBag.DepartmentName == dept)">@dept</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" id="email" name="email" class="form-control" placeholder="Enter email" value="@ViewBag.Email">
                </div>
                <div class="col-md-3">
                    <label for="role" class="form-label">Role</label>
                    <select id="role" name="role" class="form-select">
                        <option value="">All Roles</option>
                        @foreach (var role in ViewBag.Roles)
                        {
                            <option value="@role" selected="@(ViewBag.Role == role)">@role</option>
                        }
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary" style="background-color: #2c2e52; border-color: #2c2e52;">
                        <i class="fas fa-search"></i> Apply Filter
                    </button>
                    <a asp-action="DepartmentWiseEmployeeReport" class="btn btn-secondary" style="background-color: #6c757d; border-color: #6c757d;">
                        <i class="fas fa-times"></i> Clear Filters
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="employeeTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Department Name</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Gender</th>
                            <th>Phone</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@employee.DepartmentName</td>
                                <td>@employee.UserName</td>
                                <td>@employee.Email</td>
                                <td>@employee.Role</td>
                                <td>@employee.Gender</td>
                                <td>@employee.Phone</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#employeeTable').DataTable({
                "pageLength": 10,
                "ordering": true,
                "searching": true
            });

            // Handle export button click
            $('#exportBtn').on('click', function () {
                var departmentId = $('#departmentName').val();
                var email = $('#email').val();
                var role = $('#role').val();
                var form = $('<form>', {
                    'method': 'POST',
                    'action': '@Url.Action("ExportDepartmentWiseEmployeeReport")'
                });
                // Add anti-forgery token
                var token = $('input[name="__RequestVerificationToken"]').val();
                if (token) {
                    form.append($('<input>', {
                        'type': 'hidden',
                        'name': '__RequestVerificationToken',
                        'value': token
                    }));
                }
                if (departmentId) {
                    form.append($('<input>', {
                        'type': 'hidden',
                        'name': 'departmentName',
                        'value': departmentId
                    }));
                }
                if (email) {
                    form.append($('<input>', {
                        'type': 'hidden',
                        'name': 'email',
                        'value': email
                    }));
                }
                if (role) {
                    form.append($('<input>', {
                        'type': 'hidden',
                        'name': 'role',
                        'value': role
                    }));
                }
                $('body').append(form);
                form.submit();
                form.remove();
            });
        });
    </script>
} 