@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Employee Request Report";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Employee Request Report</h2>
        <div>
            <button id="exportBtn" class="btn btn-success">
                <i class="fas fa-file-excel"></i> Export to Excel
            </button>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form id="filterForm" class="row g-3">
                <div class="col-md-4">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="startDate" name="startDate">
                </div>
                <div class="col-md-4">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="endDate" name="endDate">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">Apply Filter</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="requestTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Request ID</th>
                            <th>Employee Name</th>
                            <th>Item Name</th>
                            <th>Reason</th>
                            <th>Request Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td>@request.RequestId</td>
                                <td>@request.EmployeeName</td>
                                <td>@request.ItemName</td>
                                <td>@request.Reason</td>
                                <td>@request.RequestDate.ToString("dd/MM/yyyy")</td>
                                <td>@request.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            var table = $('#requestTable').DataTable({
                "pageLength": 10,
                "ordering": true,
                "searching": true
            });

            // Handle filter form submission
            $('#filterForm').on('submit', function (e) {
                e.preventDefault();
                var startDate = $('#startDate').val();
                var endDate = $('#endDate').val();
                
                $.get('@Url.Action("EmployeeRequestReport")', { 
                    startDate: startDate,
                    endDate: endDate
                }, function (data) {
                    table.clear();
                    data.forEach(function (request) {
                        table.row.add([
                            request.requestId,
                            request.employeeName,
                            request.itemName,
                            request.reason,
                            new Date(request.requestDate).toLocaleDateString(),
                            request.status
                        ]);
                    });
                    table.draw();
                });
            });

            // Handle export button click
            $('#exportBtn').on('click', function () {
                var startDate = $('#startDate').val();
                var endDate = $('#endDate').val();
                var form = $('<form>', {
                    'method': 'POST',
                    'action': '@Url.Action("ExportEmployeeRequestReport")'
                });
                
                if (startDate) {
                    form.append($('<input>', {
                        'type': 'hidden',
                        'name': 'startDate',
                        'value': startDate
                    }));
                }
                
                if (endDate) {
                    form.append($('<input>', {
                        'type': 'hidden',
                        'name': 'endDate',
                        'value': endDate
                    }));
                }
                
                $('body').append(form);
                form.submit();
                form.remove();
            });
        });
    </script>
} 